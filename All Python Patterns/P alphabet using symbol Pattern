n=5
d=(n//2+1)
for i in range(1,n+1):  
    for j in range(1,n+1):
        if ((i==1 and j<=d) or j ==1 or(j==d and i<=d) or (i==d and j<=d)):
            print('*',end=' ')
        else:
            print(' ',end=' ')
    print(end = ' ')
    print()
print()

### OUTPUT ###

* * *      
*   *      
* * *      
*
*