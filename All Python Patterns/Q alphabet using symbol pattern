n=5
d=n-n//2+1
for i in range(1,n+1):  
    for j in range(1,n+1):
        if (((i==1 or i==d+1) and j<=d+1) or ((j==1 or j==d+1) and i<=d+1)):
            print('*',end=' ')
        elif j==i and i>=d:
            print('*',end=' ')
        else:
            print(' ',end=' ')
    print(end = ' ')
    print()
print()

### OUTPUT ###

