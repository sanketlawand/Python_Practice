n=5
d=1
for i in range(1,n+1):  
    for j in range(1,n+1):
        if j==1  or j==n or ((j==d or j==n-d+1) and i<=n//2+1):
            print('*',end=' ')
        else:
            print(' ',end=' ')
    d+=1
    print(end = ' ')
    print()
print()

### OUTPUT ###

