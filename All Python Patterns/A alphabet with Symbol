n=5
for i in range(1,n+1):
    for j in range (1,n+1):#A
        if (j==1 and i>n//2)or(j==n and i>n//2) or i==n//2+1 or (i+j==n-1 and i<n-1) or (j-i==n//2 and i<n-1):
            print('*',end=' ')
        else:
            print(' ',end=' ')
        print(end=' ')
    print()

